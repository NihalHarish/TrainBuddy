<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nihal.foodmenu.MenuActivity">

    <ListView
        android:id="@+id/menuListView"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@color/NavajoWhite"
        android:layout_marginTop="50dp">

    </ListView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="   TOTAL"
        android:id="@+id/totalTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button"
        android:layout_below="@+id/menuListView"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:background="@color/AntiqueWhite"
        android:textColor="@color/Black" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="PLACE ORDER"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/menuListView"
        android:layout_alignEnd="@+id/menuListView"
        android:background="@color/OrangeRed"
        android:textSize="25dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Food Items"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/Red"
        android:textSize="30dp"
        android:background="@color/AntiqueWhite" />


</RelativeLayout>
