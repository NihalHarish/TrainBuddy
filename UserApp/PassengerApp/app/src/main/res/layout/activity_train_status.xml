<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nihal.maindriver.TrainStatusActivity"
    android:background="@color/AntiqueWhite">

    <TextView android:text="Last Seen:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastseen"
        android:textSize="25dp"
        android:textColor="@color/Black" />
    <TextView android:text="Delay:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/delay"
        android:layout_below="@+id/lastseen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="@color/Black" />

    <TextView android:text="Status:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="@color/Black" />
    <TextView android:text="Expected Arrival:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/ETA"
        android:layout_below="@+id/delay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:textSize="25dp"
        android:textColor="@color/Black" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/backbutton"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/DriverNo"
        android:layout_toEndOf="@+id/DriverNo"
        android:layout_above="@+id/DriverNo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_alignTop="@+id/DriverNo"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_above="@+id/TaxiType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_alignTop="@+id/TaxiType"
        android:layout_toRightOf="@+id/DriverNo"
        android:layout_toEndOf="@+id/DriverNo"
        android:layout_alignBottom="@+id/TaxiType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_alignTop="@+id/TaxiNo"
        android:layout_toRightOf="@+id/DriverNo"
        android:layout_toEndOf="@+id/DriverNo"
        android:layout_alignBottom="@+id/TaxiNo" />

</RelativeLayout>
